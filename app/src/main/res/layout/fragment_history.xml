<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HistoryFragment">

    <TextView
        android:id="@+id/textBookmarkEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History is empty"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="@dimen/_20ssp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_baseline_history_24"
            android:drawableTint="@android:color/black"
            android:drawablePadding="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/btnDeleteAllHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete All"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:drawableTop="@drawable/ic_delete" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tvRecyclerviewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_surat_quran"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</RelativeLayout>