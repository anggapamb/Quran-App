<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeAngka"
                android:layout_width="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ayat2"/>

                <TextView
                    android:id="@+id/tvNomor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/relativeAngka"
                android:layout_toStartOf="@id/suratArab"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16sdp">

                <TextView
                    android:id="@+id/tvSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Al Fatihah"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:text="7 ayat, mekah" />

            </LinearLayout>

            <TextView
                android:id="@+id/suratArab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u0627\u0644\u0641\u0627\u062a\u062d\u0629"
                android:textSize="@dimen/_20ssp"
                android:textColor="@color/purpleColor"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_16sdp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>